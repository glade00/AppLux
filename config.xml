<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "fr.univ-lr.playbulb"
        version   = "1.0.0">

    <name>my App Lux</name>

    <description>
        TP Developement Mobile Hybride : Pilotage ampoule RGB
    </description>

    <author href="http://phonegap.com" email="support@phonegap.com">
        Gwladys SETTE LP MIAW
    </author>

    <!-- Define the main entry-point to the application -->
    <content src="index.html" />

    <!-- android: MIN SDK version supported on the target device. MAX version is blank by default. -->
    <preference name="android-minSdkVersion"      value="14" />

    <access origin="*" />
    
    <platform name="android">
        <icon src="images/playbulb.png"/>
    </platform>
	
	<plugin name="cordova-plugin-ble-central" spec="1.2.4" />
	<plugin name="cordova-plugin-camera" spec="2.4.1" />
	<plugin name="cordova-plugin-compat" spec="1.2.0" />
	<plugin name="cordova-plugin-whitelist" spec="1.3.3" />
	<plugin name="cordova-plugin-file" spec="4.3.1" />
	<plugin name="cordova-plugin-file-transfer" spec="1.6.1" />
	<plugin name="cordova-plugin-media-capture" spec="1.4.3" />
	<plugin name="cordova-plugin-contacts" spec="2.0.1" />
	<plugin name="cordova-plugin-device" spec="1.1.7" />
	<plugin name="cordova-plugin-device-motion" spec="1.2.5" />
	<plugin name="cordova-plugin-device-orientation" spec="1.0.7" />
	<plugin name="cordova-plugin-vibration" spec="2.1.6" />
    
</widget>
